		<defaultAcl>
			<read>nobody</read>
			<write>nobody</write>
			<delete>nobody</delete>
		</defaultAcl>
		<schemaAcl>
			<read>nobody</read>
			<write>nobody</write>
			<delete>nobody</delete>
		</schemaAcl>
	</aclGroups>
	<fields>
		<field name='theFieldName' type='numeric'>
			<validation>
				<cardinality min='1' max='2'/>
			</validation>
		</field>
	</fields>
</schema>